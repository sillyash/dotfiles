configuration {
  font:    "JetBrainsMono Nerd Font ExtraLight Italic 12";
  drun-display-format: "{icon} {name}";
  show-icons: true;
  icon-theme: "candy-icons";
	modi:    "drun,run,window";
	terminal: "kitty";

	location: 0;
	yoffset:  0;
	xoffset:  0;

  timeout {
      action: "kb-cancel";
      delay:  0;
  }
  filebrowser {
      directories-first: true;
      sorting-method:    "name";
  } 
}
